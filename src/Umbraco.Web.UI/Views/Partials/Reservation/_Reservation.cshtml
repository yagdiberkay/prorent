@using Umbraco.Web.UI.Controllers;
@inherits UmbracoViewPage<Umbraco.Web.UI.Dto.CapacitiesResponseDto[]>
@{
    Layout = null;
}
@if (Model != null)
{
    foreach (var item in Model)
    {
        <div class="stm-fullwidth-with-parallax-bg">
            <div class="container">
                <div class="stm_wizard_title heading-font">
                    Reservation
                </div>
                <div class="row">
                    <div class="col-md-4 col-sm-12">
                        <div class="stm_nav_wizard_step stm_nav_wizard_step_1">

                            <div class="inner ">
                                <a href="~/Views/Partials/Reservation/_ReservationDate.cshtml" class="top heading-font external" rel="nofollow">
                                    <div class="number">
                                        <span>1</span>
                                    </div>
                                    <label>Your Itinerary</label>
                                </a>
                                <div class="content">
                                    <div class="first">
                                        <h5>Alım</h5>
                                        <div class="stm_filled_pickup_location">@item.pickupLocName</div>
                                        <div class="stm_filled_pickup_date">@item.pickupDate</div>
                                    </div>
                                    <div class="second">
                                        <h5 class="second">Teslimat</h5>
                                        <div class="stm_filled_return_location">@item.returnLocName</div>
                                        <div class="stm_filled_return_date">@item.returnDate</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <div class="stm_nav_wizard_step stm_nav_wizard_step_2">

                            <div class="inner current">
                                <a href="~/Views/Partials/Reservation/_Reservation.cshtml" class="top heading-font external" rel="nofollow">
                                    <div class="number">
                                        <span>2</span>
                                    </div>
                                    <label>Select Vehicle/Add-ons</label>
                                </a>
                                <div class="content">
                                    <div class="first">
                                        <h5>Type</h5>
                                        <div>--</div>
                                    </div>
                                    <div class="second">
                                        <h5>Addons</h5>
                                        <div>--</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <div class="stm_nav_wizard_step stm_nav_wizard_step_3">

                            <div class="inner ">
                                <a href="../checkout/index.html" class="top heading-font external" rel="nofollow">
                                    <div class="number">
                                        <span>3</span>
                                    </div>
                                    <label>Reserve Your Vehicle</label>
                                </a>
                                <div class="content">
                                    <div class="first">
                                        <h5>Your information</h5>
                                        <div>--</div>
                                    </div>
                                    <div class="second">
                                        <h5>Payment information</h5>
                                        <div>
                                            --
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}


